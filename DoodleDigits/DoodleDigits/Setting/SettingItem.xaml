<UserControl x:Class="DoodleDigits.Setting.SettingItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DoodleDigits.Setting"
             mc:Ignorable="d" 
             DataContext="{Binding RelativeSource={RelativeSource Self}}"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="5 10 0 0">
        <StackPanel>
            <TextBlock FontWeight="Medium" FontSize="15" Margin="0" TextWrapping="NoWrap" Text="{Binding SettingName}"/>
            <TextBlock FontStyle="Italic" Opacity="0.7" Margin="3 0 0 5" TextWrapping="Wrap" Text="{Binding Description}"/>
            <Grid Margin="5 0 0 0" x:Name="ChildrenPresenter"/>
        </StackPanel>
    </Grid>
</UserControl>
